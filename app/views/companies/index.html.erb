<h3>All Companies</h3>

<ul>
  <% @companies.each do |company| %>
  <li class="company_<%= company.id %>">
    <%= link_to company.name, company_path(company) %>
    <%= link_to edit_company_path(company) do %>
      <i class="fas fa-edit"><span class="hidden">Edit</span></i>
    <% end %>
    <%= link_to company_path(company), method: "delete" do %>
      <i class="fas fa-trash-alt"><span class="hidden">Delete</span></i>
    <% end %>
  </li>
  <% end %>
</ul>
