<%= form_for [@company, @contact] do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>

  <%= f.label :position %>
  <%= f.text_field :position %>

  <%= f.label :email %>
  <%= f.text_field :email %>

  <%= f.label :company_name %>
  <%= f.collection_select(:company_id, Company.all, :id, :name, prompt: true) %>

  <%= f.submit %>
<% end %>
