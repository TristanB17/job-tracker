<%= form_for [@company, @job] do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>

  <%= f.label :description %>
  <%= f.text_field :description %>

  <%= f.label :level_of_interest %>
  <%= f.number_field :level_of_interest %>

  <%= f.label :company_name %>
  <%= f.collection_select(:company_id, Company.all, :id, :name, prompt: true) %>

  <%= f.label :category_name %>
  <%= f.collection_select(:category_id, Category.all, :id, :title, prompt: true) %>

  <%= f.label :city %>
  <%= f.text_field :city %>

  <%= f.submit %>
<% end %>
