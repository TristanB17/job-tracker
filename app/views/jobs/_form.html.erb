<%= form_for [@company, @job] do |f| %>
  <div class="form-group">
    <%= f.label :title %>
    <%= f.text_field :title, :required => true %>
  </div>
  <div class="form-group">
    <%= f.label :description %>
    <%= f.text_field :description, :required => true %>
  </div>
  <div class="form-group">
    <%= f.label :level_of_interest %>
    <%= f.number_field :level_of_interest, :required => true %>
  </div>
  <div class="form-group">
    <%= f.label :company_name %>
    <%= f.collection_select(:company_id, Company.all, :id, :name, prompt: true, :required => true)%>
  </div>
  <div class="form-group">
    <%= f.label :category_name %>
    <%= f.collection_select(:category_id, Category.all, :id, :title, prompt: true, :required => true) %>
  </div>
  <div class="form-group">
    <%= f.label :city %>
    <%= f.text_field :city, :required => true %>
  </div>
  <div class="form-group">
    <%= f.submit %>
  </div>
<% end %>
